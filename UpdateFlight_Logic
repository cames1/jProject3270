package transactionBroker;

import javax.swing.JTextField;

import databaseInterface.Flights;

public class UpdateFlight_Logic {
	
	public static boolean updateFlightNumber(JTextField flightNumberJT, JTextField newFlightNumberJT){
		String flightNumber = flightNumberJT.getText();
		String newFlightNumber = newFlightNumberJT.getText();
		return Flights.updateFlightNumber(flightNumber, newFlightNumber);
	}
	
	public static boolean updateDepartureDateTime(JTextField flightNumberJT, JTextField newDepartureDateTimeJT){
		String flightNumber = flightNumberJT.getText();
		String newDepartureDateTime = newDepartureDateTimeJT.getText();
		return Flights.updateDepartureDateTime(flightNumber, newDepartureDateTime);
	}
	
	public static boolean updateArrivalDateTime(JTextField flightNumberJT, JTextField newArrivalDateTimeJT){
		String flightNumber = flightNumberJT.getText();
		String newArrivalDateTime = newArrivalDateTimeJT.getText();
		return Flights.updateArrivalDateTime(flightNumber, newArrivalDateTime);
	}
	
	public static boolean updateLayoverAirport(JTextField flightNumberJT, JTextField newLayoverAirportJT){
		String flightNumber = flightNumberJT.getText();
		String newLayoverAirport = newLayoverAirportJT.getText();
		return Flights.updateLayoverAirport(flightNumber, newLayoverAirport);
	}
	
	public static boolean updateLayoverDuration(JTextField flightNumberJT, JTextField newLayoverDurationJT){
		String flightNumber = flightNumberJT.getText();
		String newLayoverDuration = newLayoverDurationJT.getText();
		return Flights.updateLayoverDuration(flightNumber, newLayoverDuration);
	}
	
	public static boolean updateDepartureAirport(JTextField flightNumberJT, JTextField newDepartureAirportJT){
		String flightNumber = flightNumberJT.getText();
		String newDepartureAirport = newDepartureAirportJT.getText();
		return Flights.updateDepartureAirport(flightNumber, newDepartureAirport);
	}
	
	public static boolean updateDepartureCity(JTextField flightNumberJT, JTextField newDepartureCityJT){
		String flightNumber = flightNumberJT.getText();
		String newDepartureCity = newDepartureCityJT.getText();
		return Flights.updateDepartureCity(flightNumber, newDepartureCity);
	}
	
	public static boolean updateDepartureState(JTextField flightNumberJT, JTextField newDepartureStateJT){
		String flightNumber = flightNumberJT.getText();
		String newDepartureState = newDepartureStateJT.getText();
		return Flights.updateDepartureState(flightNumber, newDepartureState);
	}
	
	public static boolean updateDepartureCountry(JTextField flightNumberJT, JTextField newDepartureCountryJT){
		String flightNumber = flightNumberJT.getText();
		String newDepartureCountry = newDepartureCountryJT.getText();
		return Flights.updateDepartureCountry(flightNumber, newDepartureCountry);
	}
	
	public static boolean updateDestinationCode(JTextField flightNumberJT, JTextField newDestinationCodeJT){
		String flightNumber = flightNumberJT.getText();
		String newDestinationCode = newDestinationCodeJT.getText();
		return Flights.updateDestinationCode(flightNumber, newDestinationCode);
	}
		
	public static boolean updateDestinationCity(JTextField flightNumberJT, JTextField newDestinationCityJT){
		String flightNumber = flightNumberJT.getText();
		String newDestinationCity = newDestinationCityJT.getText();
		return Flights.updateDestinationCity(flightNumber, newDestinationCity);
	}
	
	public static boolean updateDestinationState(JTextField flightNumberJT, JTextField newDestinationStateJT){
		String flightNumber = flightNumberJT.getText();
		String newDestinationState = newDestinationStateJT.getText();
		return Flights.updateDestinationState(flightNumber, newDestinationState);
	}
	
	public static boolean updateDestinationCountry(JTextField flightNumberJT, JTextField newDestinationCountryJT){
		String flightNumber = flightNumberJT.getText();
		String newDestinationCountry = newDestinationCountryJT.getText();
		return Flights.updateDestinationCountry(flightNumber, newDestinationCountry);
	}
	
	public static boolean updateApplicableTax(JTextField flightNumberJT, JTextField newApplicableTaxationPercentJT){
		String flightNumber = flightNumberJT.getText();
		String newApplicableTaxationPercent = newApplicableTaxationPercentJT.getText();
		return Flights.updateApplicableTaxationPercent(flightNumber, newApplicableTaxationPercent);
	}

	public static boolean updateEconomyCapacity(JTextField flightNumberJT, JTextField newCapacityJT){
		String flightNumber = flightNumberJT.getText();
		String newCapacity = newCapacityJT.getText();
		return Flights.updateCapacity(flightNumber, newCapacity);
	}
	
	public static boolean updatePlaneType(JTextField flightNumberJT, JTextField newPlaneTypeJT){
		String flightNumber = flightNumberJT.getText();
		String newPlaneType = newPlaneTypeJT.getText();
		return Flights.updatePlaneType(flightNumber, newPlaneType);
	}
	
	public static boolean updateEconomyBooked(JTextField flightNumberJT, JTextField newBookedJT){
		String flightNumber = flightNumberJT.getText();
		String newBooked = newBookedJT.getText();
		return Flights.updateBooked(flightNumber, newBooked);
	}
	
	public static boolean updateEconomyCost(JTextField flightNumberJT, JTextField newCostJT){
		String flightNumber = flightNumberJT.getText();
		String newCost = newCostJT.getText();
		return Flights.updateEconomyCost(flightNumber, newCost);
	}
	
}
